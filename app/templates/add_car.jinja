{% extends "base.jinja" %}

{% block content %}
  <h2>Add Car</h2>
  <form action="" method="post">
  {{ form.hidden_tag() }}
 <p>
    {{ form.make.label }}
    {{ form.make(size=32) }} <br>
    {{ form.model.label }}
    {{ form.model(size=32) }} <br>
    {{ form.year.label }}
    {{ form.year(size=32) }} <br>
    {% for error in form.year.errors %}
      <span class="err-msg">{{ error }}</span>
    {% endfor %}
    {{ form.info.label }}
    {{ form.info(size=32) }} <br>
 </p>
 <p>{{ form.submit() }}</p>
</form>
{% endblock content %}